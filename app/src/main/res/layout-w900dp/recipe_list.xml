<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:background="@color/backgroundColor"
    tools:context="com.burntcar.android.thebakingapp.RecipeListActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <!--
    This layout is a two-pane layout for the Recipes
    master/detail flow.
    
    -->
    <LinearLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/ingred_card_view"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="5dp"
android:backgroundTint="@color/cardColor"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recipe_steps_tv"
                    android:textSize="15sp"
                    tools:text="Chocolate Cookies"
                    android:text="ingredients"
                    android:layout_centerInParent="true"

                    />



            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/recipe_list"
            android:name="com.burntcar.android.thebakingapp.RecipeListFragment"
            android:layout_width="@dimen/item_width"
            android:layout_height="match_parent"

            app:layoutManager="LinearLayoutManager"
            tools:context="com.burntcar.android.thebakingapp.RecipeListActivity"
            tools:listitem="@layout/recipe_list_content" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/recipe_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
